<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/eventLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.androidnetworking.widget.ANImageView
            android:id="@+id/eventImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_size_180"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/ic_launcher"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/eventMainContent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_size_50"
            android:background="@drawable/gradient_transparent_black"
            app:layout_constraintBottom_toBottomOf="@id/eventImageView">

            <TextView
                android:id="@+id/nameEventTextView"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_16"
                android:fontFamily="@font/questrial"
                android:gravity="center_vertical"
                android:text="@string/mock_text"
                android:textColor="@color/colorIcons"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dateEventTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/dateEventTextView"
                android:layout_width="@dimen/size_0"
                android:layout_height="match_parent"
                android:text="@string/mock_text"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/margin_16"
                android:fontFamily="@font/questrial"
                android:textStyle="bold"
                android:textColor="@color/colorIcons"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_size_30"
            android:id="@+id/eventInfoContent"
            android:background="@drawable/border_bottom"
            app:layout_constraintTop_toBottomOf="@id/eventImageView">

            <TextView
                android:id="@+id/locationEventTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:drawableStart="@drawable/ic_place_black_12dp"
                android:fontFamily="@font/questrial"
                android:gravity="center_vertical"
                android:text="@string/mock_text"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <!--<TextView
                android:id="@+id/costEventTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/mock_text"
                android:textSize="@dimen/text_size_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_16"
                android:fontFamily="@font/questrial"
                android:textColor="@color/colorPrimaryText"/>-->
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>